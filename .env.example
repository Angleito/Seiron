# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Vercel Deployment Configuration
VERCEL_URL=seiron.xyz

# Frontend Environment Variables (will be prefixed with VITE_)
VITE_API_URL=https://seiron.xyz
VITE_ENVIRONMENT=production

# Optional: ElevenLabs for Voice (if using voice features)
NEXT_PUBLIC_ELEVENLABS_API_KEY=your-elevenlabs-api-key
NEXT_PUBLIC_ELEVENLABS_VOICE_ID=your-voice-id

# Optional: Analytics and Monitoring
VERCEL_ANALYTICS_ID=your-analytics-id

# Supabase Configuration (for chat history and session management)
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key (optional, for admin operations)

# Security Configuration
RATE_LIMIT_REDIS_URL=redis://your-redis-url (optional, for advanced rate limiting)

# Development Configuration (for local testing)
NODE_ENV=production