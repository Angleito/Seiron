# =============================================================================
# SEIRON AI PORTFOLIO MANAGER - CONFIGURATION
# =============================================================================
# This configuration file contains environment variables for Seiron
# The platform now uses Privy for wallet management - no private keys required!
# =============================================================================

# =============================================================================
# BLOCKCHAIN & NETWORK CONFIGURATION
# =============================================================================

# Sei Network Configuration
SEI_RPC_URL=https://evm-rpc.sei-apis.com
RPC_URL=https://evm-rpc.sei-apis.com  # Sei Agent Kit alias
SEI_CHAIN_ID=1328

# Wallet Configuration
# DEPRECATED: Private keys are no longer needed - Seiron uses Privy for wallet management
# Users connect their wallets through the frontend and approve transactions directly
# WALLET_ADDRESS=0x... (NO LONGER NEEDED)
# PRIVATE_KEY=0x... (NO LONGER NEEDED)
# SEI_PRIVATE_KEY=0x... (NO LONGER NEEDED)

# Sei Agent Kit Contract Addresses
CIAO_MAINNET_ADDRESS=0x7461cFe1A4766146cAFce60F6907Ea657550670d
ORDER_DISPATCH_MAINNET_ADDRESS=0x993543DC8BdFCba9fc7355d822108eF49dB6b9F9

# =============================================================================
# API PROVIDERS & AI SERVICES
# =============================================================================

# Core AI Provider (Required for both systems)
OPENAI_API_KEY=sk-...
AI_MODEL=gpt-4

# Additional AI Providers (Sei Agent Kit optional)
ANTHROPIC_API_KEY=
COHERE_API_KEY=
GOOGLE_GENERATIVE_AI_API_KEY=
GROQ_API_KEY=
MISTRAL_API_KEY=

# =============================================================================
# SOCIAL MEDIA INTEGRATION (SEI AGENT KIT)
# =============================================================================

# Twitter API Configuration (Optional)
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_TOKEN_SECRET=

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Server Configuration
API_PORT=3001
FRONTEND_PORT=3000
PORT=3001  # Backend alias for API_PORT

# Environment
NODE_ENV=production
DEBUG=ai-portfolio:*

# =============================================================================
# DATABASE & CACHING
# =============================================================================

# Redis Configuration (for caching)
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================

# Security
CORS_ORIGIN=http://localhost:3000
CORS_ORIGINS=http://localhost:3000  # Production multi-origin support
SESSION_SECRET=your-secret-key-here
JWT_SECRET=your-jwt-secret-key-here

# Privy Configuration (Required for wallet management)
NEXT_PUBLIC_PRIVY_APP_ID=your-privy-app-id
PRIVY_APP_SECRET=your-privy-app-secret
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your-walletconnect-project-id  # Optional

# =============================================================================
# MONITORING & PERFORMANCE
# =============================================================================

# Monitoring
ENABLE_MONITORING=true
METRICS_PORT=9090

# Performance Settings
CACHE_TTL=300000
BATCH_SIZE=100
MAX_WORKERS=16

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# =============================================================================
# ORCHESTRATOR & MICROSERVICES
# =============================================================================

# Orchestrator Settings
ORCHESTRATOR_ENDPOINT=http://localhost:3001
ORCHESTRATOR_WS_ENDPOINT=ws://localhost:3001

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=simple
LOG_TRANSPORTS=console
LOG_FILE_ENABLED=false
LOG_FILE_NAME=logs/app.log
LOG_FILE_MAX_SIZE=10m
LOG_FILE_MAX_FILES=5

# =============================================================================
# CONTRACT DEPLOYMENT (OPTIONAL)
# =============================================================================

# Contract Deployment Settings (Optional)
SEI_ETHERSCAN_API_KEY=
GAS_PRICE=1000000000
GAS_LIMIT=30000000
ENABLE_GAS_REPORTING=true