# =============================================================================
# SEIRON AI PORTFOLIO MANAGER - CONSOLIDATED CONFIGURATION
# =============================================================================
# This configuration file contains all environment variables for both
# frontend and backend components of Seiron
# =============================================================================

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# Privy Configuration (Frontend)
VITE_PRIVY_APP_ID=your_privy_app_id_here
VITE_PRIVY_CLIENT_ID=your_privy_client_id_here

# WalletConnect Project ID (optional, for better wallet support)
VITE_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here

# Sei Network RPC (Frontend)
VITE_SEI_RPC_URL=https://evm-rpc.sei-apis.com

# Voice Interface Configuration (Frontend - secure backend proxy)
VITE_VOICE_ENABLED=false

# Voice Settings (Frontend - optional)
VITE_VOICE_STABILITY=0.75
VITE_VOICE_SIMILARITY_BOOST=0.75
VITE_VOICE_STYLE=0.5
VITE_VOICE_USE_SPEAKER_BOOST=true

# API Configuration (Frontend)
VITE_API_URL=http://localhost:3001
VITE_WS_URL=ws://localhost:3001
VITE_ORCHESTRATOR_API=http://localhost:3001
VITE_ORCHESTRATOR_WS=ws://localhost:3001

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================

# Server Configuration
PORT=8000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# Redis Configuration (for caching and session management)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# Database Configuration (if using a database)
DATABASE_URL=postgresql://username:password@localhost:5432/sei_portfolio
DATABASE_SSL=false
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================

# Sei Network Configuration
SEI_RPC_URL=https://rpc.sei-apis.com
SEI_CHAIN_ID=sei-chain
SEI_GAS_PRICE=0.1usei

# Ethereum Configuration (for multi-chain support)
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-infura-key
ETHEREUM_CHAIN_ID=1

# =============================================================================
# EXTERNAL APIS
# =============================================================================

# External APIs
COINGECKO_API_KEY=your-coingecko-api-key
DEFILLAMA_API_URL=https://api.llama.fi
SEI_API_URL=https://api.sei.io

# =============================================================================
# WEBSOCKET & REAL-TIME CONFIGURATION
# =============================================================================

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_CONNECTION_TIMEOUT=60000

# =============================================================================
# LOGGING & MONITORING
# =============================================================================

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_FILE_PATH=./logs/app.log

# Monitoring & Analytics
SENTRY_DSN=your-sentry-dsn-here
ANALYTICS_ENABLED=false

# =============================================================================
# CORS & FILE UPLOAD
# =============================================================================

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# File Upload (if needed)
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Feature Flags
ENABLE_PORTFOLIO_TRACKING=true
ENABLE_AI_ANALYSIS=true
ENABLE_TRADING_SUGGESTIONS=true
ENABLE_REAL_TIME_UPDATES=true

# =============================================================================
# CACHE SETTINGS
# =============================================================================

# Cache Settings
CACHE_TTL_PORTFOLIO=300
CACHE_TTL_PRICES=60
CACHE_TTL_AI_RESPONSES=1800

# =============================================================================
# AI CONFIGURATION
# =============================================================================

# AI Configuration
AI_MODEL_TEMPERATURE=0.7
AI_MAX_CONVERSATION_HISTORY=50
AI_CONTEXT_WINDOW_SIZE=8000

# Rate Limiting for AI
AI_RATE_LIMIT_WINDOW=3600000
AI_RATE_LIMIT_MAX_REQUESTS=50

# =============================================================================
# PORTFOLIO ANALYSIS
# =============================================================================

# Portfolio Analysis Settings
PORTFOLIO_UPDATE_INTERVAL=30000
PRICE_UPDATE_INTERVAL=10000
ANALYSIS_CACHE_TTL=600

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development Settings
DEBUG_ROUTES=false
DEBUG_WEBSOCKETS=false
DEBUG_AI_RESPONSES=false

# =============================================================================
# VOICE INTERFACE (BACKEND)
# =============================================================================

# Voice Interface Settings (Backend)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=your_voice_id_here
VOICE_CACHE_TTL=3600
VOICE_MAX_TEXT_LENGTH=5000

# Voice Feature Flags
ENABLE_VOICE_COMMANDS=true
ENABLE_VOICE_RESPONSES=true
VOICE_RESPONSE_DELAY_MS=500