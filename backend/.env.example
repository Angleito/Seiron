# =================================
# SEI AI PORTFOLIO MANAGER - BACKEND
# =================================

# Server Configuration
PORT=8000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# Redis Configuration (for caching and session management)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# Database Configuration (if using a database)
DATABASE_URL=postgresql://username:password@localhost:5432/sei_portfolio
DATABASE_SSL=false
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Blockchain Configuration
SEI_RPC_URL=https://rpc.sei-apis.com
SEI_CHAIN_ID=sei-chain
SEI_GAS_PRICE=0.1usei

# Ethereum Configuration (for multi-chain support)
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-infura-key
ETHEREUM_CHAIN_ID=1

# External APIs
COINGECKO_API_KEY=your-coingecko-api-key
DEFILLAMA_API_URL=https://api.llama.fi
SEI_API_URL=https://api.sei.io

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_CONNECTION_TIMEOUT=60000

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_FILE_PATH=./logs/app.log

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# File Upload (if needed)
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Feature Flags
ENABLE_PORTFOLIO_TRACKING=true
ENABLE_AI_ANALYSIS=true
ENABLE_TRADING_SUGGESTIONS=true
ENABLE_REAL_TIME_UPDATES=true

# Monitoring & Analytics
SENTRY_DSN=your-sentry-dsn-here
ANALYTICS_ENABLED=false

# Cache Settings
CACHE_TTL_PORTFOLIO=300
CACHE_TTL_PRICES=60
CACHE_TTL_AI_RESPONSES=1800

# AI Configuration
AI_MODEL_TEMPERATURE=0.7
AI_MAX_CONVERSATION_HISTORY=50
AI_CONTEXT_WINDOW_SIZE=8000

# Rate Limiting for AI
AI_RATE_LIMIT_WINDOW=3600000
AI_RATE_LIMIT_MAX_REQUESTS=50

# Portfolio Analysis Settings
PORTFOLIO_UPDATE_INTERVAL=30000
PRICE_UPDATE_INTERVAL=10000
ANALYSIS_CACHE_TTL=600

# Development Settings
DEBUG_ROUTES=false
DEBUG_WEBSOCKETS=false
DEBUG_AI_RESPONSES=false