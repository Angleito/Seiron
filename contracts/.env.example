# Sei Data Logger Environment Variables
# Copy this file to .env and fill in your actual values

# Private key for deployment (without 0x prefix)
PRIVATE_KEY=your_private_key_here

# Sei network RPC URLs
SEI_MAINNET_RPC=https://evm-rpc.sei-apis.com
SEI_TESTNET_RPC=https://evm-rpc-testnet.sei-apis.com

# Etherscan API key for contract verification
SEI_ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Wallet address for faucet requests and balance checks
WALLET_ADDRESS=your_wallet_address_here

# Optional: Custom gas settings for Sei
GAS_PRICE=1000000000  # 1 gwei
GAS_LIMIT=30000000

# Optional: Deployment configuration
INITIAL_LOGGERS=address1,address2,address3
ORACLE_ADDRESSES=oracle1,oracle2,oracle3

# Development settings
DEBUG=true
VERBOSE_LOGGING=true

# Network-specific settings
MAINNET_DEPLOYMENT=false
TESTNET_DEPLOYMENT=true

# Contract addresses (filled automatically after deployment)
DATALOGGER_ADDRESS=
ORACLE_AGGREGATOR_ADDRESS=

# API endpoints for monitoring and analytics
MONITORING_ENDPOINT=
ANALYTICS_ENDPOINT=

# Database connection for off-chain data storage
DATABASE_URL=

# Redis connection for caching
REDIS_URL=

# Security settings
ENABLE_EMERGENCY_PAUSE=true
MULTISIG_OWNER=false
TIMELOCK_DELAY=0

# Performance monitoring
ENABLE_GAS_REPORTING=true
ENABLE_PERFORMANCE_METRICS=true